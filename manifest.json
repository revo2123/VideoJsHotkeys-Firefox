{
  "manifest_version": 3,
  "name": "Video Hotkeys",
  "version": "1.2",
  "description": "Adds potentially missing hotkeys for VideoJs Plugin",
  "icons": {
    "48": "icons/48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{a459c184-2536-4b95-9115-1917a8b209a7}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "action": {
    "default_icon": "icons/48.png",
    "default_title": "Video Hotkeys",
    "default_popup": "popup/index.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-compat.js", "addHotkeys.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  }
}